{
  "env": {
    "jest/globals": true,
  },
  "extends": ["airbnb", "plugin:jest/recommended"],
  "globals": {
    "document": true,
    "gas": true,
    "window": true
  },
  "plugins": [
    "jest",
    "scanjs-rules",
    "no-unsafe-innerhtml"
  ],
  "rules": {
    /* TODO: These rules should be packaged */
    "no-unsafe-innerhtml/no-unsafe-innerhtml" : 2,
    "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
    "import/no-named-as-default": 0,
    "scanjs-rules/assign_to_hostname" : 2,
    "scanjs-rules/assign_to_href" : 2,
    "scanjs-rules/assign_to_location" : 2,
    "scanjs-rules/assign_to_onmessage" : 2,
    "scanjs-rules/assign_to_pathname" : 2,
    "scanjs-rules/assign_to_protocol" : 2,
    "scanjs-rules/assign_to_search" : 2,
    "scanjs-rules/assign_to_src" : 2,
    "scanjs-rules/call_Function" : 2,
    "scanjs-rules/call_addEventListener" : 2,
    "scanjs-rules/call_addEventListener_deviceproximity" : 2,
    "scanjs-rules/call_addEventListener_message" : 2,
    "scanjs-rules/call_connect" : 2,
    "scanjs-rules/call_eval" : 2,
    "scanjs-rules/call_execScript" : 2,
    "scanjs-rules/call_hide" : 2,
    "scanjs-rules/call_open_remote=true" : 2,
    "scanjs-rules/call_parseFromString" : 2,
    "scanjs-rules/call_setAttribute_mozbrowser" : 2,
    "scanjs-rules/call_setImmediate" : 2,
    "scanjs-rules/call_setInterval" : 2,
    "scanjs-rules/call_setTimeout" : 2,
    "scanjs-rules/identifier_indexedDB" : 2,
    "scanjs-rules/identifier_localStorage" : 2,
    "scanjs-rules/identifier_sessionStorage" : 2,
    "scanjs-rules/new_Function" : 2,
    "scanjs-rules/property_addIdleObserver" : 2,
    "scanjs-rules/property_createContextualFragment" : 2,
    "scanjs-rules/property_geolocation" : 2,
    "scanjs-rules/property_getUserMedia" : 2,
    "scanjs-rules/property_indexedDB" : 2,
    "scanjs-rules/property_localStorage" : 2,
    "scanjs-rules/property_mgmt" : 2,
    "scanjs-rules/property_sessionStorage" : 2
  }
}
